generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Customer {
  id String @id @default(uuid()) @map("_id") 
  name String
  email String
  password String
  status Boolean
  created_at DateTime? @default(now())
  updted_at DateTime? @default(now())

  @@map("customers")
}

